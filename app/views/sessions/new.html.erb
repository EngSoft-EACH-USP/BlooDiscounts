<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>BlooDiscounts</title>
    <!-- style CSS -->
</head>

<body>
    <div align="center">
        <h1> BlooDiscounts </h1>
        <div class="img-logo">
            <%= image_tag "logo.png" %>
        </div>
        <form name="dados_login" method="post" id="formulario">
            <div align="center">
                <h3>Login</h3>
                <span>Email:</span>
                <input type="text" name="email" id="email"/>
                <br/>
                <br/>
                <span>Senha:</span>
                <input type="text" name="senha" id="senha"/>
                <br/>
                <br/>                         
                <%= button_to "Entrar", new_user_path, :class => "custom-button ripple", :method => :get %>
                      
            </div>    
        </form> 
    </div>
</body>
</html>