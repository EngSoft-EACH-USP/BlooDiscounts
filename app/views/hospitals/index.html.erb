<% provide :head_tags do %>
<meta name='turbolinks-visit-control' content='reload'>
  <%= javascript_include_tag 'map_hospitals.js' %>
<% end %>

<div align="center">
<p id="notice"><%= notice %></p>

<h1>Hospitals</h1>

<%= link_to raw("<span class='oi oi-plus'></span> Novo Hospital"), new_hospital_path, class: "btn btn-danger edit-btn-danger btn-medium"%>

<table width="1200" class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Level A+</th>
      <th>Level A-</th>
      <th>Level B+</th>
      <th>Level B-</th>
      <th>Level O+</th>
      <th>Level O-</th>
      <th>Level AB+</th>
      <th>Level AB-</th>
    </tr>
  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.hosp_name %></td>
        <td><%= hospital.hosp_city %></td>
        <td><%= hospital.hosp_state %></td>
        <td><%= hospital.lattitude %></td>
        <td><%= hospital.longitude %></td>
        <td><%= hospital.a_plus %></td>
        <td><%= hospital.a_minus %></td>
        <td><%= hospital.b_plus %></td>
        <td><%= hospital.b_minus %></td>
        <td><%= hospital.o_plus %></td>
        <td><%= hospital.o_minus %></td>
        <td><%= hospital.ab_plus %></td>
        <td><%= hospital.ab_minus %></td>
        <td><%= link_to raw('<span class="oi oi-eye"></span>'), hospital %></td>
        <td><%= link_to raw('<span class="oi oi-pencil"></span>'), edit_hospital_path(hospital) %></td>
        <td><%= link_to raw('<span class="oi oi-x"></span>'), hospital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<button onclick="pegarDadosHopitais()", class="btn btn-danger edit-btn-danger" >Buscar os 3 Hospitais mais pr√≥ximos</button>
<p>
    <div id="map"></div>
</p>
<br>

</div>
